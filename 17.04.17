#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{
	FILE* file = fopen("d:\\temp.file", "r");
	char* buff = malloc(256);
	while (fgets(buff, 256, file))
	{
		char* searchResult = strstr(buff, "\n");
		if (searchResult == NULL)
		{
			printf("%s", buff);
		}
		else
		{
			// нашли \n
			*searchResult = '\0';
			printf("%s", buff);
			break;
		}
	}

	fclose(file);
	free(buff);
}
